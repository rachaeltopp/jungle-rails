<tr>
  <td>
    <%= image_tag Product.find(each_line_item.product_id).image.tiny %>
  </td>
  <td>
    <h4><%= Product.find(each_line_item.product_id).name %></h4>
    <br>
    <p><%= Product.find(each_line_item.product_id).description %></p>
  </td>
  <td>
    <%= Product.find(each_line_item.product_id).price %>
  </td>
  <td>
    <%= each_line_item.quantity %>
  </td>
  <td>
    <%= each_line_item.total_price %>
  </td>
</tr>